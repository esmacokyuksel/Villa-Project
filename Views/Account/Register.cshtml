@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form by web7itmasters.com</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/colorlib-regform-7-login-form-templates/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/colorlib-regform-7-login-form-templates/css/style.css">
</head>
<body>


    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Kullanıcı Kaydı</h2>
                        <form method="post" class="register-form" id="register-form" asp-controller="Account" asp-action="Register">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="NameSurname" id="name" placeholder="Adınız Soyadınız" />
                            </div>
                            <div class="form-group">
                                <label for="username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="UserName" id="username" placeholder="Kullanıcı Adınız " />
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" asp-for="Email" id="email" placeholder="Email Adresiniz" />
                            </div>

                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" asp-for="Password" id="pass" placeholder="Şifreniz" />
                            </div>

                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>  <a href="#" class="term-service">Kullanıcı Şartlarını </a> Okudum Kabul Ediyorum </label>
                            </div>

                            <p style="color:red">@Html.ValidationSummary()</p>

                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Kayıt Ol" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img style="height:400px; width:500px" src="https://foreverdc.com/wp-content/uploads/2019/09/dubai-villa.jpg" alt="sing up image"></figure>
                        <a href="/Account/Login" class="signup-image-link">Zaten Üyeyim. Giriş Yap</a>
                    </div>
                </div>
            </div>
        </section>



    </div>


    <!-- JS -->
    <script src="~/colorlib-regform-7-login-form-templates/vendor/jquery/jquery.min.js"></script>
    <script src="~/colorlib-regform-7-login-form-templates/js/main.js"></script>
</body><!-- This templates was made by web7itmasters.com (https://web7itmasters.com.com) -->
</html>